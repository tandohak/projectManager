		<property name="username" value="taskmanager0909" />
		<property name="password" value="tasktest123" />
    
	<!-- email 요청시는 SMTP -->
		<property name="javaMailProperties">
			<props>
				<prop key="mail.transport.protocol">smtp</prop>   
